            99%{    color:transparent;  }
            100%{   color: #000;    }
        }
		<style>
	  html, body, #map {
        height: 100%;
        width: 100%;
        margin: 0px;
      }
			table {
		   font-family: arial, sans-serif;
		   font-size: 10;
		   border-collapse: collapse;
		}

		td, th {
		   border: 1px solid #dddddd;
		   text-align: left;
		   padding: 2px;
		}

		tr:nth-child(even) {
		   background-color: #eeeeee;
		} 
      #subtitle {
        font-size: 10px;
      }
	   .info {
